#
# wm independent hotkeys
#

# Spawn terminal
super + Return
  st

# rofi powermenu
super + e
  $HOME/.config/rofi/scripts/powermenu.sh

# rofi launcher
super + d
  $HOME/.config/rofi/scripts/launcher.sh

# Applications
super + {w, b, v}
 {thunar, firefox, code}

# Screenshots
super + {_,shift + }p
  {maim -s ~/$(date +%s).png, shotgun}

# Vol
XF86Audio{Lower,Raise}Volume
  amixer -D pulse sset Master {5%-, 5%+}

XF86AudioMute
  amixer set Master toggle

# Media
XF86Audio{Next,Prev,Play}
  playerctl {next, previous, play-pause}

# Brightness
XF86MonBrightness{Up,Down}
  brightnessctl set {5%+, 5%-}

# restart bspwm & sxhkd
super + shift + {r, q}
  {pkill -USR1 -x sxhkd && notify-send 'SXHKD reloaded', . $HOME/.config/berry/autostart}

#
# berry hotkeys
#

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + alt + {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9, 0}
    berryc switch_workspace {0-8, 9}

super + shift + {1-9, 0}
    berryc send_to_workspace {0-8, 9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super + o
    berryc snap_right

super + i 
    berryc snap_left

super + n
    berryc toggle_decorations

super + u
    berryc cycle_focus

super + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus
