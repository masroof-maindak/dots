#
# wm independent hotkeys
#

# terminal emulator
super + Return
  wezterm

# rofi
super + d
  $HOME/.config/rofi/scripts/launcher.sh

super + shift + e
  $HOME/.config/rofi/scripts/powermenu.sh

super + w
  thunar

super + b
  firefox

# Screenshots
super + {_,shift + }p
  {maim -s ~/$(date +%s).png, shotgun} 

# Media
XF86AudioLowerVolume
  amixer -D pulse sset Master 5%-

XF86AudioRaiseVolume
  amixer -D pulse sset Master 5%+

XF86AudioMute
  amixer sset Master toggle

XF86AudioPlay
  playerctl play-pause

XF86AudioNext
  playerctl next

XF86AudioPrev
  playerctl previous

XF86AudioStop
  playerctl stop

XF86MonBrightnessUp
  brightnessctl set 5%+

XF86MonBrightnessDown
  brightnessctl set 5%-

# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd

super + shift + q
  . $HOME/.config/berry/autostart

#
# berry hotkeys
#

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + ctrl + {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9, 0}
    berryc switch_workspace {0-8, 9}

super + shift + {1-9, 0}
    berryc send_to_workspace {0-8, 9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super + o
    berryc snap_right

super + i 
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus
