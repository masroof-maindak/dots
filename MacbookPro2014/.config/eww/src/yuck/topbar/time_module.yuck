(defwidget time_module []
    (box
        :space-evenly false
        :orientation "v"
        :valign "center"
        (box
            :class "main_text"
            :halign "start"
            :tooltip {formattime(EWW_TIME, "%c")}
            (label :text {formattime(EWW_TIME, "%I:%M %p")}))
        (box
            :class "sub_text"
            :halign "start"
            (label :text {formattime(EWW_TIME, "%b %d, '%y")})))
)
