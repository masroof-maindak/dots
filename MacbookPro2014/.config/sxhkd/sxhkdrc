#
# wm independent hotkeys
#

# terminal emulator
super + Return
  wezterm

# Spawn new terminal as floating
super + shift + Return
  bspc rule -a \* -o state=floating && wezterm

# rofi
super + d
  $HOME/.config/rofi/scripts/launcher.sh

super + shift + e
  $HOME/.config/rofi/scripts/powermenu.sh

super + w
  thunar

super + b
  firefox

# Screenshots
super + {_,shift + }p
  {maim -s ~/$(date +%s).png, shotgun}

# Media
XF86AudioLowerVolume
  amixer -D pulse sset Master 5%-

XF86AudioRaiseVolume
  amixer -D pulse sset Master 5%+

XF86AudioMute
  amixer sset Master toggle

XF86AudioPlay
  playerctl play-pause

XF86AudioNext
  playerctl next

XF86AudioPrev
  playerctl previous

XF86AudioStop
  playerctl stop

XF86MonBrightnessUp
  brightnessctl set 5%+

XF86MonBrightnessDown
  brightnessctl set 5%-

#
# bspwm hotkeys
#

# Center a floating window
super + c
  eval "$(bspc query -T -n | jq -r '"X=\(.client.floatingRectangle.x+(.client.floatingRectangle.width/2)-1280)\nY=\(.client.floatingRectangle.y+(.client.floatingRectangle.height/2)-800)"')" && dx=$(($X * -1)) && dy=$(($Y * -1)) && bspc node -v $dx $dy

# restart bspwm & sxhkd
super + shift + r
  bspc wm -r && pkill -USR1 -x sxhkd

# close
super + q
	bspc node -c

#
# Focusing
#

# focus the next/previous window in the current desktop
super + {_,shift + }u
	bspc node -f {next,prev}.local.!hidden.window

# Cycle between desktops
super + {_,shift +}Tab
	bspc desktop -f {next, prev}.local


#
# move/resize
#

# swap the current node and the biggest window
super + ctrl + Return
	bspc node -s biggest.window

# move/focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# send to a given desktop and follow focus
super + ctrl + {1-9,0}
  bspc node -d '^{1-9,10}' --follow

# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + ctrl + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-30 0,0 30,0 -30,30 0}


#
# state/flags
#

# set the node flags
super + s
	bspc node -g sticky

# set the window state
super + {n,shift + n,shift + space,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next


#
# preselect
#

# preselect the direction
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + Escape
	bspc node -p cancel

# preselect the ratio
super + alt + {1-9}
  bspc node -o 0.{1-9}
